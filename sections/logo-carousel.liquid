<section class="logo-carousel-section">
  <div class="logo-row logo-row--reverse">
    {% for i in (1..2) %}
      <div class="logo-track">
        {% for block in section.blocks %}
          <div class="logo-item">
            {% assign image = block.settings.logo %}
            {% if image %}
            <img
                src="{{ image | image_url }}"
                alt="{{ image.alt | escape }}"
                width="{{ image.width }}"
                height="{{ image.height }}"
                loading="lazy"
            >
            {% endif %}
          </div>
        {% endfor %}
      </div>
    {% endfor %}
  </div>
  
  <div class="logo-row logo-row--normal">
    {% for i in (1..2) %}
      <div class="logo-track">
        {% for block in section.blocks %}
          <div class="logo-item">
            {% assign image = block.settings.logo %}
            {% if image %}
            <img
                src="{{ image | image_url }}"
                alt="{{ image.alt | escape }}"
                width="{{ image.width }}"
                height="{{ image.height }}"
                loading="lazy"
            >
            {% endif %}
          </div>
        {% endfor %}
      </div>
    {% endfor %}
  </div>
</section>

<style>
.logo-carousel-section {
  overflow: hidden;
  padding: 2rem 0;
}

.logo-row {
  display: flex;
  overflow: hidden;
  white-space: nowrap;
  position: relative;
}

.logo-track {
  display: flex;
  animation: scroll-left 30s linear infinite;
}

.logo-row--reverse .logo-track {
  animation: scroll-right 30s linear infinite;
}

.logo-item {
  flex: 0 0 auto;
  padding: 0 2rem;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80px;
}

.logo-item img {
  max-height: 60px;
  max-width: 120px;
}

@keyframes scroll-left {
  from {
    transform: translateX(0%);
  }
  to {
    transform: translateX(-50%);
  }
}

@keyframes scroll-right {
  from {
    transform: translateX(0%);
  }
  to {
    transform: translateX(50%);
  }
}
</style>

{% schema %}
{
  "name": "Logo Carousel",
  "max_blocks": 20,
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Logo Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Logo Carousel"
    }
  ]
}
{% endschema %}
